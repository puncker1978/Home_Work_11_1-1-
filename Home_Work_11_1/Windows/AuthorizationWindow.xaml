<Window x:Class="Home_Work_11_1.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Work_11_1"
        mc:Ignorable="d"
        Title="Авторизация"
        Width="300"
        Height="200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="10,10"
            FontSize="20"
            Text="Выберите должность" />

        <ComboBox
            x:Name="cbPosition"
            Grid.Row="1"
            Margin="10,10"
            FontSize="18">
            <TextBlock Text="Консультант" />
            <TextBlock Text="Менеджер" />
        </ComboBox>

        <Button
            Grid.Row="2"
            Height="30"
            Margin="100,20"
            Click="Button_Login_Click"
            Content="OK" />
        </Grid>
</Window>
